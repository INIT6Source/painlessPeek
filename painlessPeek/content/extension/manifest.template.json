{
    "manifest_version": 3,
    "name": "<%= @config[:name] %>",
    "version": "0.0.1",
    "description": "<%= @config[:description] %>",
    "permissions": [
        "scripting",
        "activeTab",
        "storage",
        "tabs",
        "contextMenus",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "homepage_url": "https://greyzone.github.io",
    "action": {
        "default_title": "GreyZone",
        "default_popup": "popup.html",
        "options_page": "options.html"
    },
    "icons": {
        "128": "icon.png"
    },
    "content_scripts":[
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["content_all.js"]
        }
    ]
}
